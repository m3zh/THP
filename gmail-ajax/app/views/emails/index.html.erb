<div class="container text-center ml-0 mb-5">
  <%= link_to "Get a new email", emails_path, method: :post, class: "btn btn-primary",remote: true %>
</div>

<div class="container-fluid ml-0">
  <div class="row">
    <div class="col-sm-4">
  <table class="table">

    <thead class="thead-dark">
      <tr>
        <th scope="col">#id</th>
        <th scope="col">Subject</th>
        <th scope="col">Body</th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody id="email-list">
        <% @emails.each do  |e|%>
        <% subject = e.subject.split().first(2).join(' ') %>
      <tr id="e<%= e.id%>" class="unread">
        <th scope="row"><%= e.id%></th>
        <td><%= link_to subject, email_path(e.id), class: "text-muted", remote: true %></td>
        <td ><%= e.body.split().first %> ...</td>
        <td><%= link_to "Delete", email_path(e.id), method: :delete, class: "btn btn-warning btn-sm",remote: true %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>

      <div class="col-sm-8">

        <div  class="mt-3 ml-5" id="email-body"></div>
</div>

  </div>
        </div>
