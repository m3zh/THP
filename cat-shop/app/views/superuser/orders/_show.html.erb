<div class="container-fluid mt-5">
  <h2 class="text-center">Commande n°<%= @order.id %></h2>
  <% @order.items.each do |item| %>
    <div class="container">
      <div class="row m-1">
        <div class="col-xs-4 mt-auto mb-auto mr-5">
          <img src=<%= item.image_url %> alt="" style="width: 80px; height: 100px; object-fit: cover;" class="show-image rounded"/>
        </div>
        <div class="card-body pt-0">
          <h4 class="card-title"><%= item.title %></h4>
          <h6 class="card-subtitle"><b><%= item.price%> €<b></h6>
        </div>
      </div>
    </div>
    <hr style="width: 80%">
  <% end %>
</div>
<div class="container font-weight-bold">
<%= link_to " < Retour", :back %>
</div>
