
<div class="container m-auto text-center">
  <div class=" text-center mt-5">
    <h3>Nouveau chaton</h3>
  </div>

  <div class="mt-3 mb-3 shadow p-3 mb-5 bg-white rounded ">
    <%= form_tag superuser_items_path, multipart: true do %>
      <div class="card">
        <div class="card-body row">
        <div class="col-md-4">
          <h6 class="card-title my-4">Prénom du chaton: <br> <%= text_field_tag :title %></h6>
          <%= file_field_tag :photo %>
          <p class="card-text my-4">Prix de la photographie : <br>  <%= number_field_tag :price, value = nil, step: 0.01 %></p>
        </div>
        <div class="col-md-8">
          <p class="card-text  my-2"> Description: <br> <%= text_area_tag :description%></p>
          <p class="card-text my-2">Mise en ligne le : <%= Time.now.strftime("%d/%m/%Y") %> </p>
          <%= submit_tag "Télécharger un nouveau chaton" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
