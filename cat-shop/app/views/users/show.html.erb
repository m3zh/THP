<div class="container mt-5 text-center">
  <div class="my-5 alert col-md-6 offset-md-3 shadow p-3 mb-5 bg-white rounded">
    <h2 class="mt-3 mb-5">Informations personnelles</h2>

    <div class="text-center my-2">
      
        <div class="input-group mb-3">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
          <span class="user-email"><%= @user.email %></span>  
        </div>
        <div class="actions my-3">
          <%= link_to "Editer", edit_user_registration_path(@user), class:"btn btn-primary" %>
          <%=link_to "Voir mes commandes", user_orders_path(current_user), class:"btn btn-outline-primary order-button" %>
        </div>
    </div>    
  </div>
</div>
<div class="container font-weight-bold">
<%= link_to " < Retour", :back %>
</div>