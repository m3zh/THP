<% flash.each do |fl,msg| %>
  <div class="alert alert-<%= fl %>"> <%= msg %> </div>
<% end %>

<h1 class="h3 mb-3 font-weight-normal text-center m-5">Pay and Join in</h1>
  <div class="row justify-content-center">
    <div class="card m-4 text-center" style="width:30%;">
      <div class="card-body">
        <h5 class="card-title" style="color: rgb(245,199,26)"> <%=@event.title.upcase%> </h5>
        <h6 class="card-subtitle mb-2 text-muted"> <%= @event.start_date %> </h6>
        <h6 class="card-subtitle mb-2 text-muted"> <%= @event.location %> </h6>
        <h6 class="card-subtitle mb-2"> Description: </h6>
        <p class="card-text" style="max-height: 200px;"> <%=@event.description%> </p>
        <h6 class="card-subtitle mb-2 text-muted"> <%= @event.price %>â‚¬</h6>
    </div>
  </div>
</div>

<%= form_tag event_attendances_path(@event.id) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>


    <div class="row justify-content-center">
    <div class="flex-item">
  <script src="https://checkout.stripe.com/checkout.js"
          class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @event.title %>"
          data-amount= "<%= @event.price * 100.0 %>"
          data-currency = "eur"
          data-locale="auto"></script> <% end %>
          </div>
</div>
